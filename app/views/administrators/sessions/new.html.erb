<div class="text-center d-flex align-items-center h-100 bg-gray bg-opacity-5 flex-column">
  <% flash.each do |key, value| %>
    <div class="<%= flash_class(key) %> mt-3">
      <%= value %>
    </div>
  <% end %>

  <main class="form-signin">
    <%= form_for(@admin_user, url: administrators_sessions_path, method: :post) do |f| %>
      <h1 class="h3 mb-3 fw-normal">Clinica Admin</h1>
      <h3 class="h5 fw-normal">Login</h3>

      <div class="form-floating">
        <%= f.email_field :email,
                          autofocus: true,
                          autocomplete: "email",
                          class: 'form-control shadow-none',
                          placeholder: "name@example.com" %>
        <%= f.label :email, 'Correo Electrónico' %>
      </div>
      <div class="form-floating">
        <%= f.password_field :password,
                             autofocus: true,
                             autocomplete: "email",
                             class: 'form-control shadow-none',
                             placeholder: "*******" %>
        <%= f.label :password, 'Contraseña' %>
      </div>

      <div class="checkbox mb-3">
        <label>
          <%= f.check_box :remember %> Recuérdame
        </label>
      </div>

      <%= f.submit "Ingresar", class: "w-100 btn btn-lg btn-primary" %>
    <% end %>

    <!--    <div class="mt-3">-->
    <%#= link_to '¿Olvidaste tu contraseña?', new_admin_password_path %>
    <!--    </div>-->
  </main>
</div>
